<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HiStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HiStore" parent="Base.Theme.HiStore" />
    <!--Bottom navigation font-->
    <style name="BottomNavigationViewFont" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8font_mdp</item>
        <item name="fontFamily">@font/iransans</item>
    </style>
    <!--Colored shadows-->
    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" >@color/royalBlue</item>
        <item name="android:outlineAmbientShadowColor" >@color/royalBlue</item>
    </style>

    <style name="ColoredShadowLight">
        <item name="android:outlineSpotShadowColor" >@color/cornflowerBlue</item>
        <item name="android:outlineAmbientShadowColor" >@color/cornflowerBlue</item>
    </style>
    <!--Shaped images-->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--ProgressBar-->
    <style name="DarkProgressbar">
        <item name="colorAccent">@color/darkStrategy</item>
    </style>

    <style name="SalmonProgressbar">
        <item name="colorAccent">@color/salmon</item>
    </style>
</resources>